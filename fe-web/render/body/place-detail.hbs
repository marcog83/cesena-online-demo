<div class="place-detail main">
    {{> include/places/place-details-tpl}}
    <div class="main-content">
        {{#if eventiEvidenza}}
            <section class="section eventi-evidenza">
                <h1 class="title">Eventi in evidenza</h1>

                <div class="eventi-evidenza-CNT">
                    {{#each eventiEvidenza}}
                        <div class="inline-block">
                            {{> include/eventi/thumbnail-evento-tpl }}
                        </div>
                    {{/each}}
                </div>
            </section>
        {{/if}}
        {{#if photos}}
            <section class="section photo-evidenza">
                <h1 class="title">Ultime foto</h1>

                <div class="photo-evidenza-CNT">
                    {{#each photos}}
                        <div class="inline-block">
                            {{> include/photos/photo-thumbnail-tpl }}
                        </div>
                    {{/each}}
                </div>
            </section>
        {{/if}}
        {{#if otherPhotos}}
            <section class="other-photos">
                {{#each otherPhotos}}
                    <div class="other-photo">
                        {{> include/photos/photo-thumbnail-tpl }}
                    </div>
                {{/each}}
            </section>
        {{/if}}
    </div>
</div>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCP7Leoxb6Lqp--LAex1hKfthYQ0yMKrwo"> </script>
<div class="main-content">
    {{> include/comments/comments }}
</div>


